<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.SelectAreaActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:showIn="@layout/activity_select_area">

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:text="Finalizar Turno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegistrpCentrifugacion"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:text="Registro de Centrifugación"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRegistroSeparacion"
        android:layout_width="201dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:text="Registro de Separación"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="278dp" />

    <Button
        android:id="@+id/btnIdentificacionBolsa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:text="Identificación de bolsas de sangre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnRegistroMaterias"
        tools:layout_editor_absoluteY="36dp" />

    <Button
        android:id="@+id/btnRegistroMaterias"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="24dp"
        android:text="Registro de Materias Primas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="263dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>